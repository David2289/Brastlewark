<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/commons_20dp"
    android:paddingEnd="@dimen/commons_20dp"
    android:paddingTop="@dimen/commons_05dp"
    android:paddingBottom="@dimen/commons_05dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_outlined_primary"
        android:padding="@dimen/commons_10dp">

        <ImageView
            android:id="@+id/photo"
            android:layout_width="40dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@null"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Font.Medium.Title.Black"
            app:layout_constraintStart_toEndOf="@+id/photo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingStart="@dimen/commons_20dp"
            android:paddingEnd="@dimen/commons_10dp"
            android:layout_marginTop="@dimen/commons_05dp"
            tools:text="Pancho Villa"/>

        <TextView
            android:id="@+id/age"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Font.Regular.Body.Black"
            app:layout_constraintStart_toEndOf="@+id/photo"
            app:layout_constraintTop_toBottomOf="@+id/name"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingStart="@dimen/commons_20dp"
            android:paddingEnd="@dimen/commons_10dp"
            android:layout_marginTop="@dimen/commons_05dp"
            tools:text="Age: 388"/>

        <TextView
            android:id="@+id/hair"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Font.Regular.Body.Black"
            app:layout_constraintStart_toEndOf="@+id/photo"
            app:layout_constraintTop_toBottomOf="@+id/age"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingStart="@dimen/commons_20dp"
            android:paddingEnd="@dimen/commons_10dp"
            android:layout_marginTop="@dimen/commons_05dp"
            android:layout_marginBottom="@dimen/commons_05dp"
            tools:text="Hair color: Red"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>